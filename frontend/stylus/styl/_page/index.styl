$calcBg = #afafaf
body
  font 14px 'Open sans', sans-serif
  background none
  background-image linear-gradient(180deg,#4ac1ff,#795bb0)
.calc
  display block
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 20px auto
  overflow hidden
  width 300px
  height auto
  border-radius 20px
  background rgba(#fff,50%)
  height 500px
.calc__input
  color #fff
  display block
  border none
  width calc(100% - 20px)
  font-size 20px

  height:100px
  text-align right
  padding: 0 10px
  line-height 100px
  background none
  outline none
  background: rgba(0,0,0,.5)
  border-bottom 1px solid darken($calcBg, 30%)
  margin 0
.calc__bottom
  margin-top 20px
  padding 0 10px
  overflow hidden
.calc__buttons-number
  float left
  width 60%

.clac__butons-operators
  float left
  width 50%
.buttons
  display inline-block
  width 50px
  height 50px
  text-align: center
  line-height 50px
  background: rgba(255,255,255,.5)
  margin 0 5px 5px 0
  border-radius 10px
  color #383838
  transition all .3s ease
  user-select: none
  &:hover
    background rgba(red, .5)
    color #fff

.calc__butons-operators
  overflow hidden
  &:before
    display table
    clear both
.buttons
  display block
  float left
  cursor pointer
  text-align center


