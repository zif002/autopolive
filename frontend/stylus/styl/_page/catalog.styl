.catalog
  padding-top:120px
.catalog-list
  cf()
  a.lock__catalog-item
    text-decoration none
    display: block
    padding 35px
    color #000
    text-decoration none
  &__item
    col(1/3, gutter: (78/1041)*100, cycle:3)
    position: relative
    background #fff
    margin-bottom: 95px
  &__name
    font-size 20px
    font-weight 500
    marign-bottom 25px
  &__description
    font-size: 14px
    color: #888888
  &__img
    position: relative
    overflow hiddden
    min-height: 250px
    img
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      max-width 180px
      margin: auto
  &__price
    font-size: 20px
    font-weight: bold
    text-align: left
    color: #000000
.title__h1-section
    width: 707px
    height: 57px
    font-size: 42px
    font-weight: bold
    color: #000000

.btn-filter
  width: 55px
  height: 55px
  position fixed
  right 20px
  top 140px
  cursor pointer
  z-index 2
  &:hover
    .tolltip
      opacity 1
  .tolltip
    width 150px
    border-radius 10px
    text-align center
    background #000
    opacity 0
    position: absolute
    transition all .3s ease
    right: 70px
    top 35px
    margin-top -20px
    &:before
      content: ''
      display: block
      position: absolute
      right 0
      width: 0
      left: 99%
      top: 30%
      height: 0
      border-style: solid
      border-width: 5px 0 5px 5px
      border-color: transparent transparent transparent #000000


  svg
    width: 100%
    height: auto

