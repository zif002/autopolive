.gallery
  overflow: hidden
  center(1040px, pad: 120px) 
  display: flex
  flex-wrap: wrap
  align-items: stretch
  margin-top: 20px
  &__img
    height: 100%
  &__item
    text-decoration: none
    position relative
    overflow hidden
    column(1/3, $cycle: 3, $gutter: 2)
    @media(max-width: 768px)
      column(1/1, $gutter: 0)
    img
      object-fit: fill
      width: 100%
    &:hover
      .description
        bottom: 0
  .description
    transition all .3s ease
    width: 100%
    padding: 5px
    position absolute
    color: #fff
    background: rgba(0, 0, 0, .5)
    height 100%
    display: flex
    align-items: center
    justify-content: center
    bottom: -100%
    font-size 22px
    &__wrapper
      display flex
      flex-direction column
      align-items: center
      text-align: center
.gallery-item
  column(1/3, $cycle: 3, $gutter: 2)

