.panel__model
  position absolute
  left: 20px
  top: 100px
  height 100vh
  overflow auto
.model-list
  padding-left:40px
  width: 200px
  &__model-item
    position: relative
    margin: 15px 0
    transition all .3s ease
    cursor pointer
    &:before
      content ''
      width: 6px
      position: absolute
      left: -16px
      top: 50%
      height: 6px
      margin-top: -3px
      border-radius 50%
      background #d8d8d8
      transition background .3s ease
    &:hover
      transform scale(1.2)
      color  #000
      &:before
        background #000
    &--current
      color $green
      font-size 16px
      &:before
        background $green



.panel__model::-webkit-scrollbar
  display: none

